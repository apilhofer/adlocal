<%# Campaigns Index Page %>
<div class="container py-5">
  <div class="d-flex justify-content-between align-items-center mb-5">
    <div>
      <h1 class="display-5 fw-bold text-dark mb-2">Campaigns</h1>
      <p class="text-muted fs-5">Manage your advertising campaigns and creative briefs</p>
    </div>
    <%= link_to "New Campaign", new_campaign_path, class: "btn btn-primary btn-lg" %>
  </div>

  <%# Status Filter %>
  <div class="mb-4">
    <div class="d-flex flex-wrap gap-2">
      <%= link_to campaigns_path, 
          class: "btn btn-outline-primary #{'active' unless params[:status].present?}" do %>
        All (<%= @campaigns.count %>)
      <% end %>
      <%= link_to campaigns_path(status: 'draft'), 
          class: "btn btn-outline-secondary #{'active' if params[:status] == 'draft'}" do %>
        Draft (<%= @campaigns.draft.count %>)
      <% end %>
      <%= link_to campaigns_path(status: 'active'), 
          class: "btn btn-outline-success #{'active' if params[:status] == 'active'}" do %>
        Active (<%= @campaigns.active.count %>)
      <% end %>
      <%= link_to campaigns_path(status: 'completed'), 
          class: "btn btn-outline-primary #{'active' if params[:status] == 'completed'}" do %>
        Completed (<%= @campaigns.completed.count %>)
      <% end %>
    </div>
  </div>

  <% if @campaigns.any? %>
    <%# Campaigns Grid %>
    <div class="row g-4">
      <% @campaigns.each do |campaign| %>
        <div class="col-lg-4 col-md-6">
          <div class="card h-100 shadow-sm border-0">
            <div class="card-body d-flex flex-column">
              <%# Campaign Header %>
              <div class="d-flex justify-content-between align-items-start mb-3">
                <h5 class="card-title mb-0 fw-bold">
                  <%= link_to campaign.name, campaign_path(campaign), class: "text-decoration-none text-dark" %>
                </h5>
                <span class="<%= campaign.status_badge_class %> px-3 py-2 d-flex align-items-center">
                  <i class="bi bi-<%= campaign.status == 'draft' ? 'pencil' : campaign.status == 'active' ? 'play-circle' : 'check-circle' %> me-1"></i>
                  <%= campaign.status.titleize %>
                </span>
              </div>

              <%# Campaign Details %>
              <div class="mb-3">
                <p class="text-muted small mb-2">
                  <i class="bi bi-calendar3 me-1"></i>
                  Created <%= time_ago_in_words(campaign.created_at) %> ago
                </p>
                
                <% if campaign.brief.present? %>
                  <p class="card-text text-muted small mb-2">
                    <i class="bi bi-file-text me-1"></i>
                    Brief: <%= truncate(campaign.brief, length: 80) %>
                  </p>
                <% end %>

                <% if campaign.has_inspiration_images? %>
                  <p class="text-muted small mb-2">
                    <i class="bi bi-images me-1"></i>
                    <%= pluralize(campaign.inspiration_images_count, 'inspiration image') %>
                  </p>
                <% end %>

                <% if campaign.ad_sizes_array.any? %>
                  <p class="text-muted small mb-2">
                    <i class="bi bi-aspect-ratio me-1"></i>
                    <%= pluralize(campaign.ad_sizes_array.length, 'ad size') %> selected
                  </p>
                <% end %>
              </div>

              <%# Campaign Actions %>
              <div class="mt-auto">
                <div class="d-flex gap-2">
                  <%= link_to "View", campaign_path(campaign), class: "btn btn-outline-primary btn-sm flex-fill" %>
                  
                  <% if campaign.can_edit? %>
                    <%= link_to "Edit", edit_campaign_path(campaign), class: "btn btn-outline-secondary btn-sm flex-fill" %>
                  <% end %>
                  
                  <% if campaign.can_generate_ads? %>
                    <%= link_to "Generate Ads", "#", class: "btn btn-primary btn-sm flex-fill" %>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>

    <%# Campaign Stats %>
    <div class="row mt-5">
      <div class="col-md-4">
        <div class="card bg-light border-0">
          <div class="card-body text-center">
            <h3 class="text-primary fw-bold"><%= @campaigns.count %></h3>
            <p class="text-muted mb-0">Total Campaigns</p>
          </div>
        </div>
      </div>
      <div class="col-md-4">
        <div class="card bg-light border-0">
          <div class="card-body text-center">
            <h3 class="text-success fw-bold"><%= @campaigns.active.count %></h3>
            <p class="text-muted mb-0">Active Campaigns</p>
          </div>
        </div>
      </div>
      <div class="col-md-4">
        <div class="card bg-light border-0">
          <div class="card-body text-center">
            <h3 class="text-info fw-bold"><%= @campaigns.completed.count %></h3>
            <p class="text-muted mb-0">Completed Campaigns</p>
          </div>
        </div>
      </div>
    </div>

  <% else %>
    <%# Empty State %>
    <div class="text-center py-5">
      <div class="mb-4">
        <i class="bi bi-megaphone text-muted" style="font-size: 4rem;"></i>
      </div>
      <h3 class="fw-bold text-dark mb-3">No campaigns yet</h3>
      <p class="text-muted fs-5 mb-4 mx-auto" style="max-width: 500px;">
        Create your first advertising campaign to start generating creative ads for your business.
      </p>
      <div class="d-flex flex-column flex-sm-row gap-3 justify-content-center">
        <%= link_to "Create Your First Campaign", new_campaign_path, class: "btn btn-primary btn-lg" %>
        <%= link_to "Learn More", "#", class: "btn btn-outline-secondary btn-lg" %>
      </div>
    </div>
  <% end %>
</div>
