<%# Campaign Form Partial - Used by both new and edit views %>
<%= form_with model: @campaign, local: true, multipart: true, class: "needs-validation", novalidate: true, data: { controller: "campaign-completion", business_has_brand_profile: @business.has_brand_profile? } do |f| %>
  
  <%# Campaign Completion Progress %>
  <div class="card mb-4 border-0 shadow-sm">
    <div class="card-header bg-white border-bottom">
      <h5 class="mb-0 fw-bold text-dark">
        <i class="bi bi-check-circle text-primary me-2"></i>
        Campaign Completion Progress
      </h5>
    </div>
    <div class="card-body">
      <div class="d-flex align-items-center mb-3">
        <div class="progress flex-grow-1 me-3" style="height: 8px;">
          <div class="progress-bar bg-primary" role="progressbar" style="width: <%= @campaign.persisted? ? @campaign.completion_percentage : 0 %>%" data-campaign-completion-target="progressBar"></div>
        </div>
        <span class="badge bg-<%= @campaign.persisted? && @campaign.can_generate_ads? ? 'success' : 'secondary' %>" data-campaign-completion-target="percentage"><%= @campaign.persisted? ? @campaign.completion_percentage : 0 %>%</span>
      </div>
      <p class="text-muted small mb-0">
        Complete all sections below to enable ad generation. Required: Campaign Basics, Creative Brief, Goals, Audience, Offer, Call to Action, Ad Sizes, and Brand Profile.
      </p>
    </div>
  </div>

  <%# Campaign Basics %>
  <div class="card mb-4 border-0 shadow-sm">
    <div class="card-header bg-white border-bottom">
      <h5 class="mb-0 fw-bold text-dark">
        <i class="bi bi-info-circle text-primary me-2"></i>
        Campaign Basics
      </h5>
    </div>
    <div class="card-body">
      <div class="row">
        <div class="col-md-8 mb-3">
          <label for="campaign_name" class="form-label fw-bold">
            Campaign Name <span class="text-danger">*</span>
          </label>
          <%= f.text_field :name,
              id: "campaign_name",
              class: "form-control #{'is-invalid' if @campaign.errors[:name].any?}",
              placeholder: "e.g., Summer Sale 2025, Grand Opening Campaign",
              required: true %>
          <% if @campaign.errors[:name].any? %>
            <div class="invalid-feedback"><%= @campaign.errors[:name].first %></div>
          <% end %>
        </div>
        <div class="col-md-4 mb-3">
          <label class="form-label fw-bold">Status</label>
          <% if @campaign.persisted? %>
            <%# Edit view - show current status %>
            <div class="d-flex align-items-center mb-2">
              <% case @campaign.status %>
              <% when 'draft' %>
                <span class="badge bg-secondary me-2">Draft</span>
              <% when 'ready' %>
                <span class="badge bg-info me-2">Ready</span>
              <% when 'active' %>
                <span class="badge bg-success me-2">Active</span>
              <% when 'completed' %>
                <span class="badge bg-primary me-2">Completed</span>
              <% else %>
                <span class="badge bg-secondary me-2">Draft</span>
              <% end %>
            </div>
            <%= f.hidden_field :status, value: @campaign.status %>
            <div class="form-text">
              <% case @campaign.status %>
              <% when 'draft' %>
                Complete all the required and optional information then generate ads to get ready.
              <% when 'ready' %>
                Campaign is ready to be activated.
              <% when 'active' %>
                Campaign is currently running.
              <% when 'completed' %>
                Campaign has finished.
              <% end %>
            </div>
          <% else %>
            <%# New view - show draft status %>
            <div class="d-flex align-items-center">
              <span class="badge bg-secondary me-2">Draft</span>
              <span class="text-muted small">New campaigns start as drafts</span>
            </div>
            <%= f.hidden_field :status, value: 'draft' %>
            <div class="form-text">Status will change as you progress through the workflow.</div>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <%# Assets & Images %>
  <div class="card mb-4 border-0 shadow-sm">
    <div class="card-header bg-white border-bottom">
      <h5 class="mb-0 fw-bold text-dark">
        <i class="bi bi-image text-primary me-2"></i>
        Assets & Images
      </h5>
    </div>
    <div class="card-body">
      <%# Logo Section %>
      <div class="mb-4">
        <h6 class="fw-bold mb-3">Business Logo</h6>
        <% if @business.logo.attached? %>
          <div class="d-flex align-items-center mb-3">
            <div class="me-3">
              <%= image_tag @business.logo, class: "img-thumbnail", style: "width: 80px; height: 80px; object-fit: contain;" %>
            </div>
            <div>
              <p class="mb-1 fw-bold">Current Logo</p>
              <p class="text-muted small mb-0">Using your business logo</p>
            </div>
          </div>
        <% else %>
          <div class="alert alert-info">
            <i class="bi bi-info-circle me-2"></i>
            No business logo uploaded. Upload one in your <%= link_to "business profile", edit_business_path, class: "alert-link" %>.
          </div>
        <% end %>
      </div>

      <%# Current Inspiration Images (Edit only) %>
      <% if @campaign.persisted? && @campaign.has_inspiration_images? %>
        <div class="mb-4">
          <h6 class="fw-bold mb-3">Current Inspiration Images</h6>
          <div class="row g-2">
            <% @campaign.inspiration_images.each do |image| %>
              <div class="col-md-3">
                <div class="position-relative">
                  <%= image_tag image, class: "img-thumbnail w-100", style: "height: 120px; object-fit: cover;" %>
                  <%= link_to campaign_asset_path(@campaign, image), method: :delete, 
                      class: "btn btn-sm btn-danger position-absolute top-0 end-0 m-1",
                      data: { confirm: "Remove this image?" } do %>
                    <i class="bi bi-x"></i>
                  <% end %>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>

      <%# Inspiration Images Upload %>
      <div class="mb-3">
        <h6 class="fw-bold mb-3">
          <%= @campaign.persisted? ? "Add More Inspiration Images" : "Inspiration Images" %>
          <span class="badge bg-light text-muted ms-2">Optional</span>
        </h6>
        <p class="text-muted small mb-3">
          <%= @campaign.persisted? ? "Upload additional images that represent your desired visual style." : "Upload 1-5 images that represent your desired visual style." %>
          Supported formats: PNG, JPG, SVG. Max size: 5MB per file.
        </p>
        
        <%= f.file_field :inspiration_images,
            multiple: true,
            accept: "image/png,image/jpeg,image/svg+xml",
            class: "form-control",
            data: { controller: "file-preview" } %>
        
        <div id="image-preview-container" class="mt-3" style="display: none;">
          <h6 class="small fw-bold mb-2">Preview:</h6>
          <div id="image-previews" class="row g-2"></div>
        </div>
      </div>
    </div>
  </div>

  <%# Brand Profile Override %>
  <div class="card mb-4 border-0 shadow-sm">
    <div class="card-header bg-white border-bottom d-flex justify-content-between align-items-center">
      <h5 class="mb-0 fw-bold text-dark">
        <i class="bi bi-palette text-primary me-2"></i>
        Brand Profile Override
        <span class="badge bg-light text-muted ms-2">Optional</span>
      </h5>
      <button type="button" class="btn btn-sm btn-outline-secondary" data-bs-toggle="collapse" data-bs-target="#brandProfile">
        <i class="bi bi-chevron-down"></i>
      </button>
    </div>
    <div class="collapse <%= 'show' unless @campaign.persisted? %>" id="brandProfile">
      <div class="card-body">
        <div class="alert alert-info mb-4">
          <i class="bi bi-info-circle me-2"></i>
          <strong>Default values from your business:</strong>
          <ul class="mb-0 mt-2">
            <li><strong>Colors:</strong> <%= @business.brand_colors_array.any? ? @business.brand_colors_array.join(", ") : "Not set" %></li>
            <li><strong>Fonts:</strong> <%= @business.brand_fonts.present? ? @business.brand_fonts : "Not set" %></li>
            <li><strong>Tone:</strong> <%= @business.tone_words_array.any? ? @business.tone_words_array.join(", ") : "Not set" %></li>
          </ul>
        </div>
        <p class="text-muted mb-3">Override these defaults for this specific campaign, or leave blank to use business defaults.</p>
        
        <div class="row">
          <div class="col-md-6 mb-3">
            <label for="brand_colors" class="form-label fw-bold">Brand Colors Override</label>
            <p class="text-muted small mb-2">Enter hex color codes (e.g., #dc3545, #ffffff)</p>
            <%= f.text_field :brand_colors,
                id: "brand_colors",
                class: "form-control",
                placeholder: "Leave blank to use business default: #{@business.brand_colors_array.join(', ')}",
                value: @campaign.persisted? ? @campaign.brand_colors_array.join(", ") : "",
                data: { controller: "color-input" } %>
          </div>
          <div class="col-md-6 mb-3">
            <label for="brand_fonts" class="form-label fw-bold">Brand Fonts Override</label>
            <p class="text-muted small mb-2">Preferred font families</p>
            <%= f.text_field :brand_fonts,
                id: "brand_fonts",
                class: "form-control",
                placeholder: "Leave blank to use business default: #{@business.brand_fonts}",
                value: @campaign.persisted? ? @campaign.brand_fonts : "" %>
          </div>
        </div>
        <div class="mb-3">
          <label for="tone_words" class="form-label fw-bold">Tone Words Override</label>
          <p class="text-muted small mb-2">Describe your brand personality</p>
          <%= f.text_field :tone_words,
              id: "tone_words",
              class: "form-control",
              placeholder: "Leave blank to use business default: #{@business.tone_words_array.join(', ')}",
              value: @campaign.persisted? ? @campaign.tone_words_array.join(", ") : "",
              data: { controller: "tag-input" } %>
        </div>
      </div>
    </div>
  </div>

  <%# Creative Brief %>
  <div class="card mb-4 border-0 shadow-sm">
    <div class="card-header bg-white border-bottom">
      <h5 class="mb-0 fw-bold text-dark">
        <i class="bi bi-file-text text-primary me-2"></i>
        Campaign Details
      </h5>
    </div>
    <div class="card-body">
      <%# Brief Text Area %>
      <div class="mb-4">
        <label for="campaign_brief" class="form-label fw-bold">
        Description<span class="text-danger">*</span>
        </label>
        <p class="text-muted small mb-3">
          Describe your campaign goals, target audience, and key messages. 
          Minimum 20 characters.
        </p>
        <%= f.text_area :brief,
            id: "campaign_brief",
            class: "form-control #{'is-invalid' if @campaign.errors[:brief].any?}",
            rows: 6,
            placeholder: "Describe your campaign goals, target audience, and key messages...",
            required: true,
            data: { 
              controller: "brief-autosave",
              target: "briefAutosave.textarea"
            } %>
        <div class="d-flex justify-content-between mt-2">
          <div class="text-muted small">
            <span id="word-count">0</span> words
          </div>
          <div class="text-muted small">
            <span id="char-count">0</span> characters
          </div>
          <div class="text-muted small">
            <span id="save-indicator"></span>
          </div>
        </div>
        <% if @campaign.errors[:brief].any? %>
          <div class="invalid-feedback d-block"><%= @campaign.errors[:brief].first %></div>
        <% end %>
      </div>

      <%# Quick Chips %>
      <div class="mb-4">
        <h6 class="fw-bold mb-3">
          Quick Prompts 
          <span class="badge bg-light text-muted ms-2">Optional</span>
        </h6>
        <p class="text-muted small mb-3">Click to add common campaign elements to your brief:</p>
        <div class="d-flex flex-wrap gap-2" data-controller="chip-selector">
          <button type="button" class="btn btn-outline-primary btn-sm chip-btn" data-chip="Limited-time promotion">
            Limited-time promotion
          </button>
          <button type="button" class="btn btn-outline-primary btn-sm chip-btn" data-chip="Grand opening">
            Grand opening
          </button>
          <button type="button" class="btn btn-outline-primary btn-sm chip-btn" data-chip="Seasonal sale">
            Seasonal sale
          </button>
          <button type="button" class="btn btn-outline-primary btn-sm chip-btn" data-chip="New product launch">
            New product launch
          </button>
          <button type="button" class="btn btn-outline-primary btn-sm chip-btn" data-chip="Community event">
            Community event
          </button>
          <button type="button" class="btn btn-outline-primary btn-sm chip-btn" data-chip="Customer testimonials">
            Customer testimonials
          </button>
        </div>
      </div>

      <%# Guided Fields %>
      <div class="row">
        <div class="col-md-6 mb-3">
          <label for="campaign_goals" class="form-label fw-bold">
            Goals <span class="text-danger">*</span>
          </label>
          <%= f.text_area :goals,
              id: "campaign_goals",
              class: "form-control #{'is-invalid' if @campaign.errors[:goals].any?}",
              rows: 3,
              placeholder: "What do you want to achieve with this campaign?",
              required: true %>
          <% if @campaign.errors[:goals].any? %>
            <div class="invalid-feedback"><%= @campaign.errors[:goals].first %></div>
          <% end %>
        </div>
        <div class="col-md-6 mb-3">
          <label for="campaign_audience" class="form-label fw-bold">
            Target Audience <span class="text-danger">*</span>
          </label>
          <%= f.text_area :audience,
              id: "campaign_audience",
              class: "form-control #{'is-invalid' if @campaign.errors[:audience].any?}",
              rows: 3,
              placeholder: "Who is your target audience?",
              required: true %>
          <% if @campaign.errors[:audience].any? %>
            <div class="invalid-feedback"><%= @campaign.errors[:audience].first %></div>
          <% end %>
        </div>
      </div>
      <div class="row">
        <div class="col-md-6 mb-3">
          <label for="campaign_offer" class="form-label fw-bold">
            Offer Details <span class="text-danger">*</span>
          </label>
          <%= f.text_area :offer,
              id: "campaign_offer",
              class: "form-control #{'is-invalid' if @campaign.errors[:offer].any?}",
              rows: 3,
              placeholder: "What special offer or promotion are you running?",
              required: true %>
          <% if @campaign.errors[:offer].any? %>
            <div class="invalid-feedback"><%= @campaign.errors[:offer].first %></div>
          <% end %>
        </div>
        <div class="col-md-6 mb-3">
          <label for="campaign_cta" class="form-label fw-bold">
            Call to Action 
            <span class="badge bg-light text-muted ms-2">Optional</span>
          </label>
          <%= f.text_field :cta,
              id: "campaign_cta",
              class: "form-control",
              placeholder: "e.g., Shop Now, Learn More, Get Started" %>
        </div>
      </div>


    </div>
  </div>

  <%# Ad Sizes %>
  <div class="card mb-4 border-0 shadow-sm">
    <div class="card-header bg-white border-bottom">
      <h5 class="mb-0 fw-bold text-dark">
        <i class="bi bi-aspect-ratio text-primary me-2"></i>
        Ad Sizes
      </h5>
    </div>
    <div class="card-body">
      <p class="text-muted mb-3">Select the ad sizes you want to generate (at least one): <span class="text-danger">*</span></p>
      <%= hidden_field_tag "campaign[ad_sizes][]", "" %>
      <div class="row">
        <div class="col-md-6">
          <div class="form-check mb-3">
            <%= check_box_tag "campaign[ad_sizes][]", "300x250", @campaign.persisted? ? @campaign.ad_sizes_array.include?("300x250") : true, { class: "form-check-input", id: "campaign_ad_sizes_300x250" } %>
            <label class="form-check-label fw-bold" for="campaign_ad_sizes_300x250">
              300×250 (Medium Rectangle)
            </label>
            <p class="text-muted small mb-0">Standard banner size</p>
          </div>
          <div class="form-check mb-3">
            <%= check_box_tag "campaign[ad_sizes][]", "728x90", @campaign.persisted? ? @campaign.ad_sizes_array.include?("728x90") : true, { class: "form-check-input", id: "campaign_ad_sizes_728x90" } %>
            <label class="form-check-label fw-bold" for="campaign_ad_sizes_728x90">
              728×90 (Leaderboard)
            </label>
            <p class="text-muted small mb-0">Wide banner for headers</p>
          </div>
          <div class="form-check mb-3">
            <%= check_box_tag "campaign[ad_sizes][]", "160x600", @campaign.persisted? ? @campaign.ad_sizes_array.include?("160x600") : true, { class: "form-check-input", id: "campaign_ad_sizes_160x600" } %>
            <label class="form-check-label fw-bold" for="campaign_ad_sizes_160x600">
              160×600 (Wide Skyscraper)
            </label>
            <p class="text-muted small mb-0">Sidebar placement</p>
          </div>
        </div>
        <div class="col-md-6">
          <div class="form-check mb-3">
            <%= check_box_tag "campaign[ad_sizes][]", "300x600", @campaign.persisted? ? @campaign.ad_sizes_array.include?("300x600") : true, { class: "form-check-input", id: "campaign_ad_sizes_300x600" } %>
            <label class="form-check-label fw-bold" for="campaign_ad_sizes_300x600">
              300×600 (Half Page)
            </label>
            <p class="text-muted small mb-0">Large vertical banner</p>
          </div>
          <div class="form-check mb-3">
            <%= check_box_tag "campaign[ad_sizes][]", "320x50", @campaign.persisted? ? @campaign.ad_sizes_array.include?("320x50") : true, { class: "form-check-input", id: "campaign_ad_sizes_320x50" } %>
            <label class="form-check-label fw-bold" for="campaign_ad_sizes_320x50">
              320×50 (Mobile Banner)
            </label>
            <p class="text-muted small mb-0">Mobile-optimized</p>
          </div>
        </div>
      </div>
      <% if @campaign.errors[:ad_sizes].any? %>
        <div class="invalid-feedback d-block"><%= @campaign.errors[:ad_sizes].first %></div>
      <% end %>
    </div>
  </div>

  <%# Form Actions %>
  <div class="d-flex gap-3 justify-content-end">
    <% if @campaign.persisted? %>
      <%= link_to "Cancel", campaign_path(@campaign), class: "btn btn-outline-secondary" %>
      <%= f.submit "Update Campaign", class: "btn btn-primary btn-lg" %>
    <% else %>
      <%= link_to "Cancel", campaigns_path, class: "btn btn-outline-secondary" %>
      <%= f.submit "Create Campaign", class: "btn btn-primary btn-lg" %>
    <% end %>
  </div>
<% end %>
