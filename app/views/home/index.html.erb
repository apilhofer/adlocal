<%# Hero Section %>
<section class="bg-white py-16 lg:py-24">
  <div class="max-w-4xl mx-auto px-4">
    <div class="text-center">
      <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-gray-900 mb-8 text-balance">
        Local journalism.
      </h1>
      <p class="text-xl text-gray-600 max-w-2xl mx-auto leading-relaxed mb-12">
        Bringing you the stories that matter most to your community. 
        Trusted news, deep reporting, and local voices you can count on.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <!-- Flowbite Modal Trigger -->
        <button data-modal-target="subscribe-modal" data-modal-toggle="subscribe-modal" type="button" class="text-gray-500 bg-white hover:bg-gray-100 hover:text-gray-900 focus:ring-4 focus:outline-none focus:ring-gray-200 border border-gray-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center">
          Subscribe
        </button>
        
        <% unless user_signed_in? %>
          <%= link_to "Sign In", new_user_session_path, class: "text-gray-500 bg-white hover:bg-gray-100 hover:text-gray-900 focus:ring-4 focus:outline-none focus:ring-gray-200 border border-gray-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center" %>
          <%= link_to "Sign Up", new_user_registration_path, class: "text-white bg-red-600 hover:bg-red-700 focus:ring-4 focus:outline-none focus:ring-red-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center" %>
        <% end %>
      </div>
    </div>
  </div>
</section>

<%# Business Dashboard CTA for logged-in users %>
<% if user_signed_in? %>
<section class="bg-red-50 py-16">
  <div class="max-w-4xl mx-auto px-4">
    <div class="text-center">
      <h2 class="text-3xl font-bold text-gray-900 mb-4">Welcome back!</h2>
      <p class="text-lg text-gray-600 mb-8 max-w-2xl mx-auto">
        Manage your business profile, update contact information, and connect with your local community.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <%= link_to "View Dashboard", business_path, class: "text-white bg-red-600 hover:bg-red-700 focus:ring-4 focus:outline-none focus:ring-red-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center" %>
        <% unless current_user.business %>
          <%= link_to "Create Business Profile", new_business_path, class: "text-red-600 bg-white border border-red-600 hover:bg-red-50 focus:ring-4 focus:outline-none focus:ring-red-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center" %>
        <% end %>
      </div>
    </div>
  </div>
</section>
<% end %>

