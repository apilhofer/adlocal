<%# Hero Section %>
<section class="bg-white py-5 py-lg-5">
  <div class="container">
    <div class="text-center">
      <h1 class="display-1 fw-bold text-dark mb-4">
        What We Do.
      </h1>
      <p class="fs-4 text-muted mx-auto mb-4" style="max-width: 600px;">
       AdLocal makes high quality advertising campaigns accessible for small businesses.<br>
       Connectined them with the right customers, neighborhood by neighborhood.
      </p>
      <div class="d-flex flex-column flex-sm-row gap-3 justify-content-center">
        <% unless user_signed_in? %>
          <%= link_to "Sign In", new_user_session_path, class: "btn btn-outline-secondary" %>
          <%= link_to "Sign Up", new_user_registration_path, class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>
  </div>
</section>

<%# Business Dashboard CTA for logged-in users %>
<% if user_signed_in? %>
<section class="bg-light py-5">
  <div class="container">
    <div class="text-center">
      <h2 class="display-5 fw-bold text-dark mb-3">Welcome back!</h2>
      <p class="fs-5 text-muted mb-4 mx-auto" style="max-width: 600px;">
        Manage your business profile, update contact information, and connect with your local community.
      </p>
      <div class="d-flex flex-column flex-sm-row gap-3 justify-content-center">
        <%= link_to "View Dashboard", business_path, class: "btn btn-primary" %>
        <% unless current_user.business %>
          <%= link_to "Create Business Profile", new_business_path, class: "btn btn-outline-primary" %>
        <% end %>
      </div>
    </div>
  </div>
</section>
<% end %>

