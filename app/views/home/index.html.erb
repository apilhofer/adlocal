<%# Newsletter Signup %>
<section class="bg-primary py-5">
  <div class="container text-center">
    <h2 class="display-4 fw-bold text-white mb-3">Stay Informed</h2>
    <p class="fs-4 text-white mb-4 mx-auto" style="max-width: 600px;">
      Get the latest local news and stories delivered directly to your inbox. 
      Stay connected with your community.
    </p>
    <form class="mx-auto" style="max-width: 400px;">
      <div class="d-flex flex-column flex-sm-row gap-2">
        <input type="email" placeholder="Enter your email" class="form-control flex-fill">
        <button type="submit" class="btn btn-light">
          Subscribe
        </button>
      </div>
    </form>
  </div>
</section>

<!-- Bootstrap Modal -->
<div class="modal fade" id="subscribe-modal" tabindex="-1" aria-labelledby="subscribe-modal-label" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <!-- Modal header -->
      <div class="modal-header">
        <h3 class="modal-title h5" id="subscribe-modal-label">
          Subscribe to AdLocal
        </h3>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <!-- Modal body -->
      <div class="modal-body">
        <form>
          <div class="mb-3">
            <label for="email" class="form-label">Your email</label>
            <input type="email" name="email" id="email" class="form-control" placeholder="name@company.com" required>
          </div>
          <div class="mb-3">
            <label for="name" class="form-label">Your name</label>
            <input type="text" name="name" id="name" class="form-control" placeholder="John Doe" required>
          </div>
          <div class="mb-3 form-check">
            <input type="checkbox" class="form-check-input" id="remember" required>
            <label class="form-check-label" for="remember">
              I agree to the <a href="#" class="text-primary text-decoration-none">terms and conditions</a>
            </label>
          </div>
          <button type="submit" class="btn btn-primary w-100">
            Subscribe to newsletter
          </button>
        </form>
      </div>
    </div>
  </div>
</div>
