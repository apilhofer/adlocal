                  <span class="text-dark fw-bold">A</span>
                </div>
                <!-- Logo Text -->
                <div class="logo-text-footer">
                  <span class="ad-footer text-white fw-bold fs-4">Ad</span><span class="local-footer text-danger fw-bold fs-4">Local</span>
                </div>
