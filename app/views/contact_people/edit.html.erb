<div class="max-w-4xl mx-auto px-4 py-8">
  <div class="block max-w-full p-6 bg-white border border-gray-200 rounded-lg shadow">
    <div class="mb-8">
      <h1 class="text-3xl font-bold text-gray-900 mb-2">
        Edit Contact Person
      </h1>
      <p class="text-gray-600">
        Update contact person information for <%= @business.name %>
      </p>
    </div>

    <%= form_with model: [@business, @contact], local: true, class: "space-y-8" do |f| %>
      <!-- Contact Person Information Section -->
      <div class="border-b border-gray-200 pb-8">
        <h2 class="text-xl font-semibold text-gray-900 mb-6 flex items-center">
          <svg class="w-5 h-5 mr-2 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
          </svg>
          Contact Person Information
        </h2>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div>
            <label for="contact_first_name" class="block mb-2 text-sm font-medium text-gray-900">
              First Name <span class="text-red-600">*</span>
            </label>
            <%= f.text_field :first_name, 
                id: "contact_first_name",
                class: "bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-red-500 focus:border-red-500 block w-full p-2.5 #{'border-red-500' if @contact.errors[:first_name].any?}",
                placeholder: "John",
                required: true %>
            <% if @contact.errors[:first_name].any? %>
              <p class="mt-1 text-sm text-red-600"><%= @contact.errors[:first_name].first %></p>
            <% end %>
          </div>

          <div>
            <label for="contact_last_name" class="block mb-2 text-sm font-medium text-gray-900">
              Last Name <span class="text-red-600">*</span>
            </label>
            <%= f.text_field :last_name, 
                id: "contact_last_name",
                class: "bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-red-500 focus:border-red-500 block w-full p-2.5 #{'border-red-500' if @contact.errors[:last_name].any?}",
                placeholder: "Smith",
                required: true %>
            <% if @contact.errors[:last_name].any? %>
              <p class="mt-1 text-sm text-red-600"><%= @contact.errors[:last_name].first %></p>
            <% end %>
          </div>

          <div>
            <label for="contact_title" class="block mb-2 text-sm font-medium text-gray-900">Title/Position</label>
            <%= f.text_field :title, 
                id: "contact_title",
                class: "bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-red-500 focus:border-red-500 block w-full p-2.5",
                placeholder: "Owner, Manager, etc." %>
          </div>

          <div>
            <label for="contact_email" class="block mb-2 text-sm font-medium text-gray-900">Contact Email</label>
            <%= f.email_field :email, 
                id: "contact_email",
                class: "bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-red-500 focus:border-red-500 block w-full p-2.5 #{'border-red-500' if @contact.errors[:email].any?}",
                placeholder: "john@yourbusiness.com" %>
            <% if @contact.errors[:email].any? %>
              <p class="mt-1 text-sm text-red-600"><%= @contact.errors[:email].first %></p>
            <% end %>
          </div>

          <div class="md:col-span-2">
            <label for="contact_phone" class="block mb-2 text-sm font-medium text-gray-900">Contact Phone</label>
            <%= f.text_field :phone, 
                id: "contact_phone",
                class: "bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-red-500 focus:border-red-500 block w-full p-2.5",
                placeholder: "(555) 123-4567" %>
          </div>
        </div>
      </div>

      <!-- Form Actions -->
      <div class="flex flex-col sm:flex-row gap-4 pt-6 border-t border-gray-200">
        <%= f.submit "Update Contact Person", 
            class: "text-white bg-red-600 hover:bg-red-700 focus:ring-4 focus:outline-none focus:ring-red-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center flex-1 sm:flex-none" %>
        <%= link_to "Cancel", business_path(@business), 
            class: "text-gray-500 bg-white hover:bg-gray-100 hover:text-gray-900 focus:ring-4 focus:outline-none focus:ring-gray-200 border border-gray-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center flex-1 sm:flex-none" %>
      </div>
    <% end %>
  </div>
</div>
