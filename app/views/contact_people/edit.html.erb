<div class="container py-4">
  <div class="card shadow">
    <div class="card-header">
      <h1 class="h2 fw-bold mb-2">
        Edit Contact Person
      </h1>
      <p class="text-muted mb-0">
        Update contact person information for <%= @business.name %>
      </p>
    </div>
    <div class="card-body">

    <%= form_with model: [@business, @contact], local: true do |f| %>
      <!-- Contact Person Information Section -->
      <div class="border-bottom pb-4 mb-4">
        <h2 class="h4 fw-semibold mb-4 d-flex align-items-center">
          <i class="bi bi-person text-primary me-2"></i>
          Contact Person Information
        </h2>

        <div class="row">
          <div class="col-md-6 mb-3">
            <label for="contact_first_name" class="form-label">
              First Name <span class="text-danger">*</span>
            </label>
            <%= f.text_field :first_name, 
                id: "contact_first_name",
                class: "form-control #{'is-invalid' if @contact.errors[:first_name].any?}",
                placeholder: "John",
                required: true %>
            <% if @contact.errors[:first_name].any? %>
              <div class="invalid-feedback"><%= @contact.errors[:first_name].first %></div>
            <% end %>
          </div>

          <div class="col-md-6 mb-3">
            <label for="contact_last_name" class="form-label">
              Last Name <span class="text-danger">*</span>
            </label>
            <%= f.text_field :last_name, 
                id: "contact_last_name",
                class: "form-control #{'is-invalid' if @contact.errors[:last_name].any?}",
                placeholder: "Smith",
                required: true %>
            <% if @contact.errors[:last_name].any? %>
              <div class="invalid-feedback"><%= @contact.errors[:last_name].first %></div>
            <% end %>
          </div>

          <div class="col-md-6 mb-3">
            <label for="contact_title" class="form-label">Title/Position</label>
            <%= f.text_field :title, 
                id: "contact_title",
                class: "form-control",
                placeholder: "Owner, Manager, etc." %>
          </div>

          <div class="col-md-6 mb-3">
            <label for="contact_email" class="form-label">Contact Email</label>
            <%= f.email_field :email, 
                id: "contact_email",
                class: "form-control #{'is-invalid' if @contact.errors[:email].any?}",
                placeholder: "john@yourbusiness.com" %>
            <% if @contact.errors[:email].any? %>
              <div class="invalid-feedback"><%= @contact.errors[:email].first %></div>
            <% end %>
          </div>

          <div class="col-12 mb-3">
            <label for="contact_phone" class="form-label">Contact Phone</label>
            <%= f.text_field :phone, 
                id: "contact_phone",
                class: "form-control",
                placeholder: "(555) 123-4567" %>
          </div>
        </div>
      </div>

      <!-- Form Actions -->
      <div class="d-flex flex-column flex-sm-row gap-2 pt-4 border-top">
        <%= f.submit "Update Contact Person", class: "btn btn-primary flex-fill flex-sm-grow-0" %>
        <%= link_to "Cancel", business_path(@business), class: "btn btn-outline-secondary flex-fill flex-sm-grow-0" %>
      </div>
    <% end %>
    </div>
  </div>
</div>
