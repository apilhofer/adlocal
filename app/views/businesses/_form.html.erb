<div class="container py-4">
  <div class="card shadow">
    <div class="card-header">
      <h1 class="h2 fw-bold mb-2">
        <%= @business.persisted? ? "Edit Business Profile" : "Create Your Business Profile" %>
      </h1>
      <p class="text-muted mb-0">
        <%= @business.persisted? ? "Update your business information" : "Tell us about your business and add a primary contact person" %>
      </p>
    </div>
    <div class="card-body">

    <%= form_with model: @business, url: business_path, method: @business.persisted? ? :patch : :post, local: true do |f| %>
      <!-- Business Information Section -->
      <div class="border-bottom pb-4 mb-4">
        <h2 class="h4 fw-semibold mb-4 d-flex align-items-center">
          <i class="bi bi-building text-primary me-2"></i>
          Business Information
        </h2>

        <div class="row">
          <div class="col-12 mb-3">
            <label for="business_name" class="form-label">
              Business Name <span class="text-danger">*</span>
            </label>
            <%= f.text_field :name, 
                id: "business_name",
                class: "form-control #{'is-invalid' if @business.errors[:name].any?}",
                placeholder: "Enter your business name",
                required: true %>
            <% if @business.errors[:name].any? %>
              <div class="invalid-feedback"><%= @business.errors[:name].first %></div>
            <% end %>
          </div>

          <div class="col-12 mb-3">
            <label for="business_type_of_business" class="form-label">
              Type of Business <span class="text-danger">*</span>
            </label>
            <%= f.text_field :type_of_business, 
                id: "business_type_of_business",
                class: "form-control #{'is-invalid' if @business.errors[:type_of_business].any?}",
                placeholder: "e.g., Restaurant, Retail Store, Professional Services, etc.",
                required: true %>
            <% if @business.errors[:type_of_business].any? %>
              <div class="invalid-feedback"><%= @business.errors[:type_of_business].first %></div>
            <% end %>
          </div>

          <div class="col-12 mb-3">
            <label for="business_description" class="form-label">
              Business Description
            </label>
            <%= f.text_area :description, 
                id: "business_description",
                rows: 4,
                class: "form-control #{'is-invalid' if @business.errors[:description].any?}",
                placeholder: "Describe your business, services, and what makes you unique (minimum 10 characters if provided)" %>
            <% if @business.errors[:description].any? %>
              <div class="invalid-feedback"><%= @business.errors[:description].first %></div>
            <% end %>
          </div>

          <div class="col-md-6 mb-3">
            <label for="business_email" class="form-label">
              Business Email <span class="text-danger">*</span>
            </label>
            <%= f.email_field :email, 
                id: "business_email",
                class: "form-control #{'is-invalid' if @business.errors[:email].any?}",
                placeholder: "contact@yourbusiness.com",
                required: true %>
            <% if @business.errors[:email].any? %>
              <div class="invalid-feedback"><%= @business.errors[:email].first %></div>
            <% end %>
          </div>

          <div class="col-md-6 mb-3">
            <label for="business_phone" class="form-label">
              Business Phone <span class="text-danger">*</span>
            </label>
            <%= f.text_field :phone, 
                id: "business_phone",
                class: "form-control #{'is-invalid' if @business.errors[:phone].any?}",
                placeholder: "(555) 123-4567",
                required: true %>
            <% if @business.errors[:phone].any? %>
              <div class="invalid-feedback"><%= @business.errors[:phone].first %></div>
            <% end %>
          </div>

          <div class="col-md-6 mb-3">
            <label for="business_website" class="form-label">Website</label>
            <%= f.url_field :website, 
                id: "business_website",
                class: "form-control #{'is-invalid' if @business.errors[:website].any?}",
                placeholder: "https://www.yourbusiness.com" %>
            <% if @business.errors[:website].any? %>
              <div class="invalid-feedback"><%= @business.errors[:website].first %></div>
            <% end %>
          </div>

          <div class="col-md-6 mb-3">
            <label for="business_logo" class="form-label">Logo</label>
            <%= f.file_field :logo, 
                id: "business_logo",
                class: "form-control" %>
            <% if @business.logo.attached? %>
              <div class="mt-3">
                <%= image_tag @business.logo.variant(resize_to_limit: [200, 200]), class: "img-thumbnail" %>
              </div>
            <% end %>
          </div>
        </div>
      </div>

      <!-- Address Section -->
      <div class="border-bottom pb-4 mb-4">
        <h2 class="h4 fw-semibold mb-4 d-flex align-items-center">
          <i class="bi bi-geo-alt text-primary me-2"></i>
          Business Address
        </h2>

        <div class="row">
          <div class="col-md-8 mb-3">
            <label for="business_address_1" class="form-label">
              Address One <span class="text-danger">*</span>
            </label>
            <%= f.text_field :address_1, 
                id: "business_address_1",
                class: "form-control #{'is-invalid' if @business.errors[:address_1].any?}",
                placeholder: "123 Main Street",
                required: true %>
            <% if @business.errors[:address_1].any? %>
              <div class="invalid-feedback"><%= @business.errors[:address_1].first %></div>
            <% end %>
          </div>

          <div class="col-md-4 mb-3">
            <label for="business_address_2" class="form-label">Address Two</label>
            <%= f.text_field :address_2, 
                id: "business_address_2",
                class: "form-control",
                placeholder: "Suite 100" %>
          </div>

          <div class="col-md-4 mb-3">
            <label for="business_city" class="form-label">
              City <span class="text-danger">*</span>
            </label>
            <%= f.text_field :city, 
                id: "business_city",
                class: "form-control #{'is-invalid' if @business.errors[:city].any?}",
                placeholder: "Chicago",
                required: true %>
            <% if @business.errors[:city].any? %>
              <div class="invalid-feedback"><%= @business.errors[:city].first %></div>
            <% end %>
          </div>

          <div class="col-md-4 mb-3">
            <label for="business_state" class="form-label">
              State <span class="text-danger">*</span>
            </label>
            <%= f.text_field :state, 
                id: "business_state",
                class: "form-control #{'is-invalid' if @business.errors[:state].any?}",
                placeholder: "IL",
                required: true %>
            <% if @business.errors[:state].any? %>
              <div class="invalid-feedback"><%= @business.errors[:state].first %></div>
            <% end %>
          </div>

          <div class="col-md-4 mb-3">
            <label for="business_postal_code" class="form-label">
              Postal Code <span class="text-danger">*</span>
            </label>
            <%= f.text_field :postal_code, 
                id: "business_postal_code",
                class: "form-control #{'is-invalid' if @business.errors[:postal_code].any?}",
                placeholder: "60601",
                required: true %>
            <% if @business.errors[:postal_code].any? %>
              <div class="invalid-feedback"><%= @business.errors[:postal_code].first %></div>
            <% end %>
          </div>

          <div class="col-md-6 mb-3">
            <label for="business_country" class="form-label">
              Country <span class="text-danger">*</span>
            </label>
            <%= f.select :country, 
                options_for_select([
                  ['United States', 'United States'],
                  ['Canada', 'Canada'],
                  ['Mexico', 'Mexico'],
                  ['United Kingdom', 'United Kingdom'],
                  ['Germany', 'Germany'],
                  ['France', 'France'],
                  ['Italy', 'Italy'],
                  ['Spain', 'Spain'],
                  ['Netherlands', 'Netherlands'],
                  ['Belgium', 'Belgium'],
                  ['Switzerland', 'Switzerland'],
                  ['Austria', 'Austria'],
                  ['Sweden', 'Sweden'],
                  ['Norway', 'Norway'],
                  ['Denmark', 'Denmark'],
                  ['Finland', 'Finland'],
                  ['Ireland', 'Ireland'],
                  ['Portugal', 'Portugal'],
                  ['Poland', 'Poland'],
                  ['Czech Republic', 'Czech Republic'],
                  ['Hungary', 'Hungary'],
                  ['Australia', 'Australia'],
                  ['New Zealand', 'New Zealand'],
                  ['Japan', 'Japan'],
                  ['South Korea', 'South Korea'],
                  ['China', 'China'],
                  ['India', 'India'],
                  ['Brazil', 'Brazil'],
                  ['Argentina', 'Argentina'],
                  ['Chile', 'Chile'],
                  ['Colombia', 'Colombia'],
                  ['Peru', 'Peru'],
                  ['South Africa', 'South Africa'],
                  ['Egypt', 'Egypt'],
                  ['Nigeria', 'Nigeria'],
                  ['Kenya', 'Kenya'],
                  ['Israel', 'Israel'],
                  ['Turkey', 'Turkey'],
                  ['Russia', 'Russia'],
                  ['Ukraine', 'Ukraine'],
                  ['Other', 'Other']
                ], @business.country || 'United States'),
                { prompt: 'Select a country' },
                { 
                  id: "business_country",
                  class: "form-control #{'is-invalid' if @business.errors[:country].any?}",
                  required: true 
                } %>
            <% if @business.errors[:country].any? %>
              <div class="invalid-feedback"><%= @business.errors[:country].first %></div>
            <% end %>
          </div>
        </div>
      </div>

      <!-- Contact Person Section -->
      <div class="mb-4">
        <h2 class="h4 fw-semibold mb-4 d-flex align-items-center">
          <i class="bi bi-person text-primary me-2"></i>
          Primary Contact Person
        </h2>
        <p class="text-muted mb-4">Add the primary contact person for your business. This person will be the main point of contact for your business listing.</p>

        <%= f.fields_for :contact_people do |contact_f| %>
          <div class="row">
            <div class="col-md-6 mb-3">
              <label for="contact_first_name" class="form-label">
                First Name <span class="text-danger">*</span>
              </label>
              <%= contact_f.text_field :first_name, 
                  id: "contact_first_name",
                  class: "form-control #{'is-invalid' if @business.contact_people.any? && @business.contact_people.first.errors[:first_name].any?}",
                  placeholder: "John",
                  required: true %>
              <% if @business.contact_people.any? && @business.contact_people.first.errors[:first_name].any? %>
                <div class="invalid-feedback"><%= @business.contact_people.first.errors[:first_name].first %></div>
              <% end %>
            </div>

            <div class="col-md-6 mb-3">
              <label for="contact_last_name" class="form-label">
                Last Name <span class="text-danger">*</span>
              </label>
              <%= contact_f.text_field :last_name, 
                  id: "contact_last_name",
                  class: "form-control #{'is-invalid' if @business.contact_people.any? && @business.contact_people.first.errors[:last_name].any?}",
                  placeholder: "Smith",
                  required: true %>
              <% if @business.contact_people.any? && @business.contact_people.first.errors[:last_name].any? %>
                <div class="invalid-feedback"><%= @business.contact_people.first.errors[:last_name].first %></div>
              <% end %>
            </div>

            <div class="col-md-6 mb-3">
              <label for="contact_title" class="form-label">Title/Position</label>
              <%= contact_f.text_field :title, 
                  id: "contact_title",
                  class: "form-control",
                  placeholder: "Owner, Manager, etc." %>
            </div>

            <div class="col-md-6 mb-3">
              <label for="contact_email" class="form-label">Contact Email</label>
              <%= contact_f.email_field :email, 
                  id: "contact_email",
                  class: "form-control",
                  placeholder: "john@yourbusiness.com" %>
            </div>

            <div class="col-md-6 mb-3">
              <label for="contact_phone" class="form-label">Contact Phone</label>
              <%= contact_f.text_field :phone, 
                  id: "contact_phone",
                  class: "form-control",
                  placeholder: "(555) 123-4567" %>
            </div>
          </div>
        <% end %>
      </div>

      <!-- Form Actions -->
      <div class="d-flex flex-column flex-sm-row gap-2 pt-4 border-top">
        <%= f.submit @business.persisted? ? "Update Business Profile" : "Create Business Profile", 
            class: "btn btn-primary flex-fill flex-sm-grow-0" %>
        <%= link_to "Cancel", @business.persisted? ? business_path : root_path, 
            class: "btn btn-outline-secondary flex-fill flex-sm-grow-0" %>
      </div>
    <% end %>
    </div>
  </div>
</div>
  