<div class="max-w-6xl mx-auto px-4 py-8">
  <!-- Header -->
  <div class="block max-w-full p-8 bg-white border border-gray-200 rounded-lg shadow mb-8">
    <div class="flex flex-col md:flex-row md:items-center md:justify-between">
      <div class="flex items-end mb-4 md:mb-0">
        <% if @business.logo.attached? %>
          <%= image_tag @business.logo.variant(resize_to_limit: [80, 80]), class: "rounded-lg mr-8" %>
        <% else %>
          <div class="w-20 h-20 bg-red-100 rounded-lg flex items-center justify-center mr-8">
            <svg class="w-10 h-10 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
            </svg>
          </div>
        <% end %>
        <div class="ml-4">
          <h1 class="text-3xl font-bold text-gray-900 mb-0"><%= @business.name %></h1>
        </div>
      </div>
      <div class="flex flex-col sm:flex-row gap-4">
        <%= link_to "Edit Profile", edit_business_path, class: "text-white bg-red-600 hover:bg-red-700 focus:ring-4 focus:outline-none focus:ring-red-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center" %>
      </div>
    </div>
  </div>

  <!-- Flowbite Grid Layout -->
  <div class="grid grid-cols-1 lg:grid-cols-12 gap-6">
    <!-- Business Information - 8 columns on desktop -->
    <div class="lg:col-span-8">
      <!-- Business Details Card -->
      <div class="block max-w-full p-6 bg-white border border-gray-200 rounded-lg shadow hover:bg-gray-50">
        <div class="flex items-center mb-4">
          <svg class="w-5 h-5 mr-2 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
          <h2 class="text-xl font-semibold text-gray-900">Business Information</h2>
        </div>
        
        <div class="space-y-6">
          <div>
            <label class="block text-sm font-bold text-gray-700 mb-3">Description</label>
            <p class="text-gray-900 leading-relaxed"><%= @business.description.present? ? @business.description : "No description provided" %></p>
          </div>
          
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
              <label class="block text-sm font-bold text-gray-700 mb-2">Email</label>
              <a href="mailto:<%= @business.email %>" class="text-red-600 hover:text-red-700 break-all">
                <%= @business.email %>
              </a>
            </div>
            
            <div>
              <label class="block text-sm font-bold text-gray-700 mb-2">Phone</label>
              <a href="tel:<%= @business.phone %>" class="text-red-600 hover:text-red-700">
                <%= @business.phone %>
              </a>
            </div>
            
            <% if @business.website.present? %>
              <div class="md:col-span-2">
                <label class="block text-sm font-bold text-gray-700 mb-2">Website</label>
                <a href="<%= @business.website %>" target="_blank" class="text-red-600 hover:text-red-700 underline break-all">
                  <%= @business.website %>
                </a>
              </div>
            <% end %>
          </div>
        </div>
      </div>

      <!-- Address Information Card -->
      <div class="block max-w-full p-6 bg-white border border-gray-200 rounded-lg shadow hover:bg-gray-50 mt-6">
        <div class="flex items-center mb-4">
          <svg class="w-5 h-5 mr-2 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
          </svg>
          <h2 class="text-xl font-semibold text-gray-900">Address</h2>
        </div>
        
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <div>
            <label class="block text-sm font-bold text-gray-700 mb-1">Address One</label>
            <p class="text-gray-900"><%= @business.address_1 %></p>
          </div>
          <% if @business.address_2.present? %>
            <div>
              <label class="block text-sm font-bold text-gray-700 mb-1">Address Two</label>
              <p class="text-gray-900"><%= @business.address_2 %></p>
            </div>
          <% end %>
          <div>
            <label class="block text-sm font-bold text-gray-700 mb-1">City, State</label>
            <p class="text-gray-900">
              <%= [@business.city, @business.state].compact.join(", ") %>
            </p>
          </div>
          <div>
            <label class="block text-sm font-bold text-gray-700 mb-1">Postal Code</label>
            <p class="text-gray-900"><%= @business.postal_code %></p>
          </div>
          <div>
            <label class="block text-sm font-bold text-gray-700 mb-1">Country</label>
            <p class="text-gray-900"><%= @business.country %></p>
          </div>
        </div>
      </div>
    </div>

    <!-- Contact People Sidebar - 4 columns on desktop -->
    <div class="lg:col-span-4">
      <!-- Contact People Card -->
      <div class="block max-w-full p-6 bg-white border border-gray-200 rounded-lg shadow hover:bg-gray-50">
        <div class="flex items-center justify-between mb-4">
          <div class="flex items-center">
            <svg class="w-5 h-5 mr-2 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
            </svg>
            <h2 class="text-xl font-semibold text-gray-900">Contact People</h2>
          </div>
          <% unless @business.contact_people.any? %>
            <%= link_to "Add Contact", new_business_contact_person_path, class: "inline-flex items-center px-3 py-2 text-sm font-medium text-center text-white bg-red-600 rounded-lg hover:bg-red-700 focus:ring-4 focus:outline-none focus:ring-red-300" %>
          <% end %>
        </div>
        
        <% if @business.contact_people.any? %>
          <div class="space-y-4">
            <% @business.contact_people.each do |contact| %>
              <div class="block max-w-full p-4 bg-gray-50 border border-gray-200 rounded-lg">
                <div class="flex items-start justify-between">
                  <div class="flex-1">
                    <h3 class="text-lg font-semibold text-gray-900"><%= contact.name %></h3>
                    <% if contact.title.present? %>
                      <p class="text-sm text-gray-600 mb-3"><%= contact.title %></p>
                    <% end %>
                    
                    <div class="space-y-2 text-sm">
                      <% if contact.email.present? %>
                        <div class="flex items-center">
                          <svg class="w-4 h-4 mr-2 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                          </svg>
                          <a href="mailto:<%= contact.email %>" class="text-red-600 hover:text-red-700">
                            <%= contact.email %>
                          </a>
                        </div>
                      <% end %>
                      
                      <% if contact.phone.present? %>
                        <div class="flex items-center">
                          <svg class="w-4 h-4 mr-2 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                          </svg>
                          <a href="tel:<%= contact.phone %>" class="text-red-600 hover:text-red-700">
                            <%= contact.phone %>
                          </a>
                        </div>
                      <% end %>
                    </div>
                  </div>
                  
                  <div class="flex gap-2 ml-4">
                    <%= link_to "Edit", edit_business_contact_person_path(contact), class: "inline-flex items-center px-2 py-1 text-xs font-medium text-gray-600 bg-white border border-gray-300 rounded hover:bg-gray-50 hover:text-red-600" %>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        <% else %>
          <div class="text-center py-8">
            <svg class="w-12 h-12 text-gray-300 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
            </svg>
            <p class="text-gray-500 mb-4">No contact people added yet</p>
            <%= link_to "Add First Contact", new_business_contact_person_path, class: "inline-flex items-center px-4 py-2 text-sm font-medium text-center text-white bg-red-600 rounded-lg hover:bg-red-700 focus:ring-4 focus:outline-none focus:ring-red-300" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
