<div class="container py-4">
  <!-- Header -->
  <div class="card mb-4">
    <div class="card-body">
      <div class="row align-items-center">
        <div class="col-md-8 d-flex align-items-center">
          <% if @business.logo.attached? %>
            <%= image_tag @business.logo.variant(resize_to_limit: [80, 80]), class: "rounded me-4" %>
          <% else %>
            <div class="bg-light rounded d-flex align-items-center justify-content-center me-4" style="width: 80px; height: 80px;">
              <i class="bi bi-building text-primary" style="font-size: 2rem;"></i>
            </div>
          <% end %>
          <div>
            <h1 class="h2 fw-bold text-dark mb-0"><%= @business.name %></h1>
          </div>
        </div>
        <div class="col-md-4 text-md-end mt-3 mt-md-0">
          <%= link_to "Edit Profile", edit_business_path, class: "btn btn-primary" %>
        </div>
      </div>
    </div>
  </div>

  <!-- Bootstrap Grid Layout -->
  <div class="row">
    <!-- Business Information - 8 columns on desktop -->
    <div class="col-lg-8">
      <!-- Business Details Card -->
      <div class="card mb-4">
        <div class="card-header d-flex align-items-center">
          <i class="bi bi-info-circle text-primary me-2"></i>
          <h2 class="h5 fw-semibold mb-0">Business Information</h2>
        </div>
        <div class="card-body">
          <div class="mb-4">
            <label class="form-label fw-bold">Description</label>
            <p class="text-muted"><%= @business.description.present? ? @business.description : "No description provided" %></p>
          </div>
          
          <div class="row">
            <div class="col-md-6 mb-3">
              <label class="form-label fw-bold">Email</label>
              <p class="mb-0">
                <a href="mailto:<%= @business.email %>" class="text-primary text-decoration-none">
                  <%= @business.email %>
                </a>
              </p>
            </div>
            
            <div class="col-md-6 mb-3">
              <label class="form-label fw-bold">Phone</label>
              <p class="mb-0">
                <a href="tel:<%= @business.phone %>" class="text-primary text-decoration-none">
                  <%= @business.phone %>
                </a>
              </p>
            </div>
            
            <% if @business.website.present? %>
              <div class="col-12 mb-3">
                <label class="form-label fw-bold">Website</label>
                <p class="mb-0">
                  <a href="<%= @business.website %>" target="_blank" class="text-primary text-decoration-none">
                    <%= @business.website %>
                  </a>
                </p>
              </div>
            <% end %>
          </div>
        </div>
      </div>

      <!-- Address Information Card -->
      <div class="card">
        <div class="card-header d-flex align-items-center">
          <i class="bi bi-geo-alt text-primary me-2"></i>
          <h2 class="h5 fw-semibold mb-0">Address</h2>
        </div>
        <div class="card-body">
          <div class="row">
            <div class="col-md-6 mb-3">
              <label class="form-label fw-bold">Address One</label>
              <p class="mb-0"><%= @business.address_1 %></p>
            </div>
            <% if @business.address_2.present? %>
              <div class="col-md-6 mb-3">
                <label class="form-label fw-bold">Address Two</label>
                <p class="mb-0"><%= @business.address_2 %></p>
              </div>
            <% end %>
            <div class="col-md-6 mb-3">
              <label class="form-label fw-bold">City, State</label>
              <p class="mb-0">
                <%= [@business.city, @business.state].compact.join(", ") %>
              </p>
            </div>
            <div class="col-md-6 mb-3">
              <label class="form-label fw-bold">Postal Code</label>
              <p class="mb-0"><%= @business.postal_code %></p>
            </div>
            <div class="col-md-6 mb-3">
              <label class="form-label fw-bold">Country</label>
              <p class="mb-0"><%= @business.country %></p>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Contact People Sidebar - 4 columns on desktop -->
    <div class="col-lg-4">
      <!-- Contact People Card -->
      <div class="card">
        <div class="card-header d-flex align-items-center justify-content-between">
          <div class="d-flex align-items-center">
            <i class="bi bi-people text-primary me-2"></i>
            <h2 class="h5 fw-semibold mb-0">Contact People</h2>
          </div>
          <% unless @business.contact_people.any? %>
            <%= link_to "Add Contact", new_business_contact_person_path, class: "btn btn-primary btn-sm" %>
          <% end %>
        </div>
        <div class="card-body">
          <% if @business.contact_people.any? %>
            <div class="d-flex flex-column gap-3">
              <% @business.contact_people.each do |contact| %>
                <div class="bg-light rounded p-3">
                  <div class="d-flex justify-content-between align-items-start">
                    <div class="flex-grow-1">
                      <h3 class="h6 fw-semibold mb-1"><%= contact.name %></h3>
                      <% if contact.title.present? %>
                        <p class="text-muted small mb-2"><%= contact.title %></p>
                      <% end %>
                      
                      <div class="d-flex flex-column gap-1">
                        <% if contact.email.present? %>
                          <div class="d-flex align-items-center">
                            <i class="bi bi-envelope text-muted me-2 small"></i>
                            <a href="mailto:<%= contact.email %>" class="text-primary text-decoration-none small">
                              <%= contact.email %>
                            </a>
                          </div>
                        <% end %>
                        
                        <% if contact.phone.present? %>
                          <div class="d-flex align-items-center">
                            <i class="bi bi-telephone text-muted me-2 small"></i>
                            <a href="tel:<%= contact.phone %>" class="text-primary text-decoration-none small">
                              <%= contact.phone %>
                            </a>
                          </div>
                        <% end %>
                      </div>
                    </div>
                    
                    <div class="ms-3">
                      <%= link_to "Edit", edit_business_contact_person_path(contact), class: "btn btn-outline-secondary btn-sm" %>
                    </div>
                  </div>
                </div>
              <% end %>
            </div>
          <% else %>
            <div class="text-center py-4">
              <i class="bi bi-people text-muted mb-3" style="font-size: 3rem;"></i>
              <p class="text-muted mb-3">No contact people added yet</p>
              <%= link_to "Add First Contact", new_business_contact_person_path, class: "btn btn-primary" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
