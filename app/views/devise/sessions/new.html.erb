<div class="min-vh-100 bg-light d-flex flex-column justify-content-center py-5">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-md-6 col-lg-5">
        <div class="text-center mb-4">
          <h2 class="h2 fw-bold text-dark">
            Sign in to your account
          </h2>
          <p class="text-muted">
            Welcome back to AdLocal
          </p>
        </div>
        
        <div class="card shadow">
          <div class="card-body p-4">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="mb-3">
          <%= f.label :email, class: "form-label" %>
          <%= f.email_field :email, 
              autofocus: true, 
              autocomplete: "email", 
              class: "form-control",
              placeholder: "Enter your email address" %>
        </div>

        <div class="mb-3">
          <%= f.label :password, class: "form-label" %>
          <%= f.password_field :password, 
              autocomplete: "current-password", 
              class: "form-control",
              placeholder: "Enter your password" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="mb-3 d-flex justify-content-between align-items-center">
            <div class="form-check">
              <%= f.check_box :remember_me, class: "form-check-input" %>
              <%= f.label :remember_me, class: "form-check-label" %>
            </div>
            <div>
              <%= link_to "Forgot password?", new_password_path(resource_name), class: "text-primary text-decoration-none small" %>
            </div>
          </div>
        <% end %>

        <div class="d-grid">
          <button type="submit" class="btn btn-primary btn-lg">
            Sign In
          </button>
        </div>
      <% end %>
      
      <!-- Sign Up Link -->
      <div class="text-center mt-4">
        <p class="text-muted small mb-0">
          Don't have an account?
          <%= link_to "Create one here", new_user_registration_path, class: "text-primary text-decoration-none fw-semibold" %>
        </p>
      </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
