{
  "extends": [
    "stylelint-config-standard"
  ],
  "rules": {
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": [
          "import",
          "media",
          "supports",
          "keyframes"
        ]
      }
    ],
    "no-descending-specificity": null,
    "function-no-unknown": [
      true,
      {
        "ignoreFunctions": [
          "calc",
          "var"
        ]
      }
    ],
    "property-no-unknown": [
      true,
      {
        "ignoreProperties": [
          "composes"
        ]
      }
    ],
    "selector-pseudo-class-no-unknown": [
      true,
      {
        "ignorePseudoClasses": [
          "global"
        ]
      }
    ],
    "selector-pseudo-element-no-unknown": [
      true,
      {
        "ignorePseudoElements": [
          "global"
        ]
      }
    ],
    "value-no-vendor-prefix": null,
    "import-notation": "url"
  },
  "ignoreFiles": [
    "app/assets/builds/**/*",
    "vendor/**/*",
    "node_modules/**/*",
    "public/**/*"
  ]
}